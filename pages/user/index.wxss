.box {
  height: 250px;
  width: 100%;
  position: relative;
}
.user {
  position: absolute;
  left:0;
  right:0;
  top:50%;
  transform: translateY(-50%);
  text-align: center;
}
.user view {
  font-size: 24px;
}
.user image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.bgc {
  height: 1px;
}
.line {
  height: 2px;
}
.order {
  line-height: 50px;
  height: 50px;
  font-size: 16px;
}
.order text{
  float: right;
  color: #9c9797;
}
.details {
  height: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.details .item {
  flex: 0 1 25%;
}
.details .item  .iconfont {
  font-size: 26px;
  line-height: 40px;
  height: 40px;
}
.details .item  text {
  line-height: 30px;
  height: 30px;
}