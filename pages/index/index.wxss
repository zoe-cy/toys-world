/**index.wxss**/
.nav {
  margin-top: 10px;
  display: flex;
  width:100%;
  height: 90px;
  overflow: hidden;
  align-items: center;
  align-items: center;
  justify-content: space-around;
}
.item .img {
   width: 40px;
   height: 40px;
   margin: auto;
   background-color: #ff7500;
   border-radius: 50%;
   text-align: center;
   line-height: 40px;
   color: white;
   font-size:24px;
}
.item text {
  line-height: 40px;
}
.box {
  height:56px;
  width: 100%;
  text-align: center;
  position: relative;
}
.box .subtitle {
  display: block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20px;
  height: 50px;
  width: 100%;
  line-height: 50px;
  background-color: white;
  letter-spacing: 4px;
}
.list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  overflow: hidden;
  padding-top: 10px;
}
.list .goods {
  flex:0 1 47%;
  overflow: hidden;
  padding-bottom: 10px;
  padding-left: 1%;
}
.list .goods:nth-child(even){
  padding-right: 1%;
}
.list .goods .title { 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .goods .price {
  margin-top: 10px;
  line-height: 24px;
}
.list .goods .iconfont {
  font-size: 24px;
  float:right;
}